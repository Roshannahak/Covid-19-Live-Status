<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colive.covid19">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_new_launcher"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.colive.covid19.VaccinationCenters"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.PerState"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.colive.covid19.About"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.Settings"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.Team"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/transparent" />
        <activity
            android:name="com.colive.covid19.PerCountry"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.Countries"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.PerState"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.States"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.Countries"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.States"
            android:exported="true"
            android:parentActivityName="com.colive.covid19.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.Dashboard"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.colive.covid19.Splash_screen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/LightActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>