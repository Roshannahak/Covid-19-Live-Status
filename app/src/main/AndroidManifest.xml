<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.covid19">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_new_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".About"
            android:screenOrientation="portrait"
            android:parentActivityName=".Dashboard"/>
        <activity android:name=".Settings"
            android:screenOrientation="portrait"
            android:parentActivityName=".Dashboard"/>
        <activity
            android:name=".Team"
            android:screenOrientation="portrait"
            android:theme="@style/transparent" />
        <activity
            android:name=".PerCountry"
            android:parentActivityName=".Countries"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PerState"
            android:parentActivityName=".States"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Countries"
            android:parentActivityName=".Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".States"
            android:parentActivityName=".Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>