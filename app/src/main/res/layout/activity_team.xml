<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentBg"
    tools:context=".Team">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:text="Adarsh Patidar"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="patiadarsh14@gmail.com"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/adarshgitImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_github_logo" />

                                <ImageView
                                    android:id="@+id/adarshlinkedinImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_linkedin" />

                                <ImageView
                                    android:id="@+id/adarshinstaImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_instagram" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/adarsh"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#4B000000"
                    app:civ_shadow_radius="3dp" />
            </RelativeLayout>       <!--adarsh patidar-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:text="Roshan Nahak"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="roshannahakofficial@gmail.com"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/roshangitImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_github_logo" />

                                <ImageView
                                    android:id="@+id/roshanlinkedinImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_linkedin" />

                                <ImageView
                                    android:id="@+id/roshaninstaImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_instagram" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/roshan"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#4B000000"
                    app:civ_shadow_radius="3dp" />
            </RelativeLayout>       <!--roshan nahak-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:text="Samrudhi Mohanty"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="samridhi.mohanty04@gmail.com"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/samgitImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_github_logo" />

                                <ImageView
                                    android:id="@+id/samlinkedinImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_linkedin" />

                                <ImageView
                                    android:id="@+id/saminstaImageview"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_instagram" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/samridhi"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#4B000000"
                    app:civ_shadow_radius="3dp" />
            </RelativeLayout>       <!--samrudhi mohanty-->

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/closeButtonImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_close_24" />

</RelativeLayout>